{
  "info": {
    "_postman_id": "6f8a49a2-6bd9-4f3d-9f66-2b85ec9f5e79",
    "name": "Scout API E2E",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "if (!pm.environment.get('run_id')) {",
          "  pm.environment.unset('team_token');",
          "  pm.environment.unset('player_token');",
          "  pm.environment.unset('team_user_id');",
          "  pm.environment.unset('player_user_id');",
          "  pm.environment.unset('opportunity_id');",
          "  pm.environment.unset('application_id');",
          "  pm.environment.set('run_id', Date.now().toString());",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Auth - Register Team",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('register team status', function () { pm.response.to.have.status(201); });",
              "const res = pm.response.json();",
              "pm.test('register team ok', function () { pm.expect(res.ok).to.eql(true); });",
              "pm.environment.set('team_token', res.data.token);",
              "pm.environment.set('team_user_id', String(res.data.user.id));"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Team User {{run_id}}\",\"email\":\"team+{{run_id}}@example.com\",\"password\":\"Password123\",\"password_confirmation\":\"Password123\",\"role\":\"team\",\"city\":\"Istanbul\"}"
        },
        "url": "{{base_url}}/api/auth/register"
      }
    },
